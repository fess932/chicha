<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <link rel="stylesheet" type="text/css" href="/static/assets/pure-min.css">
    <link rel="stylesheet" type="text/css" href="/static/assets/grids-responsive-min.css"/>

    {{/*    htmx*/}}
    <script src="/static/assets/htmx.min.js"></script>

    <style>
        main {
            padding: 1em 2em;
        }
    </style>

    <title>chicha</title>
</head>
<body>

<main class="pure-g">
    <section class="content pure-u-1">
        <h3>Гонка {{.RaceID}} </h3>
        <button hx-get="/race/1" hx-target=".parent_table">Click me</button>

        <div class="parent_table"></div>

        <table class="pure-table pure-table-horizontal">
            <thead>
            <tr>
                <th>TagID</th>
                <th>DiscoveryTime</th>
                <th>Antenna</th>
                <th>AntennaIP</th>
                <th>Позиция</th>
                <th>TimeBehindTheLeader</th>
                <th>Номер круга</th>
                <th>LapTime</th>
                <th>Позиция в круге</th>
                <th>Текущий</th>
                <th>LapIsStrange</th>
                <th>BestLapTime</th>
                <th>BestLapPosition</th>
                <th>RaceTotalTime</th>
                <th>BetterOrWorseLapTime</th>
            </tr>
            </thead>

            <tbody>
            {{range .Laps}}
                <tr>
                    <td>{{.TagID}}</td>
                    <td>{{.DiscoveryTime}}</td>
                    <td>{{.Antenna}}</td>
                    <td>{{.AntennaIP}}</td>
                    <td>{{.CurrentRacePosition}}</td>
                    <td>{{.TimeBehindTheLeader}}</td>
                    <td>{{.LapNumber}}</td>
                    <td>{{.LapTime}}</td>
                    <td>{{.LapPosition}}</td>
                    <td>{{.LapIsCurrent}}</td>
                    <td>{{.LapIsStrange}}</td>
                    <td>{{.BestLapTime}}</td>
                    <td>{{.BestLapPosition}}</td>
                    <td>{{.RaceTotalTime}}</td>
                    <td>{{.BetterOrWorseLapTime}}</td>
                </tr>
            {{end}}
            </tbody>
        </table>

    </section>

</main>

<script>

</script>

</body>
</html>