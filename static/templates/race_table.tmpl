{{define "race_table.tmpl"}}
<table class="pure-table pure-table-horizontal">
<thead>
<tr>
<th>Pos #</th>
<th>Competitor</th>
<th>Lap #</th>
<th>Total time</th>
<th>Last lap</th>
<th>Best lap</th>
<th>Next start position #</th>
<th>Alive?</th>
<th>Strange?</th>
</tr>
</thead>

<tbody>
{{range .Laps}}
<tr>
<td align="center">{{.CurrentRacePosition}}</td>
<td>{{.TagID}}</td>
<td align="center">{{.LapNumber}}</td>
<td>{{timestampRender .RaceTotalTime}} ( {{millisDurationRender .TimeBehindTheLeader}} )</td>
<td>{{timestampRender .LapTime}} ( {{millisDurationRender .BetterOrWorseLapTime}} )</td>
<td>{{timestampRender .BestLapTime}}</td>
<td align="center">{{.BestLapPosition}}</td>
<td align="center">{{.StageFinished}}</td>
<td align="center">{{.LapIsStrange}}</td>
</tr>
{{end}}
</tbody>
</table>
{{end}}
