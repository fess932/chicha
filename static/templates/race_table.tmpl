{{define "race_table.tmpl"}}
<table class="pure-table pure-table-horizontal">
    <thead>
    <tr>
	<th>Pos #</th>
        <th>Total time</th>
	<th>Lap #</th>
        <th>Competitor</th>
        <th>Best lap</th>
	<th>Last lap</th>
        <th>Alive?</th>
        <th>Strange?</th>
    </tr>
    </thead>

    <tbody>
    {{range .Laps}}
        <tr>
            <td>{{.CurrentRacePosition}}</td>
	    <td>{{timestampRender .RaceTotalTime}} ( {{millisDurationRender .TimeBehindTheLeader}} )</td>
            <td>{{.LapNumber}}</td>
            <td>{{.TagID}}</td>
            <td>(start position #{{.BestLapPosition}} ) {{timestampRender .BestLapTime}}</td>
	    <td>{{timestampRender .LapTime}} ( {{millisDurationRender .BetterOrWorseLapTime}} )</td>
            <td>{{.StageFinished}}</td>
            <td>{{.LapIsStrange}}</td>
        </tr>
    {{end}}
    </tbody>
</table>
{{end}}
